# ============================================
# Environment Configuration File
# ============================================
# Copy this file to .env and update values as needed
# Command: copy env.example .env
#
# Priority order:
# 1. System environment variables (if ENV_OVERRIDE=false)
# 2. .env file values (this file)
# 3. Default values in config_settings.py
#
# Set ENV_OVERRIDE=true to make .env override system env vars (default: true)
# ============================================

# Override Control
# Set to "false" if you want system environment variables to take precedence
ENV_OVERRIDE=true

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/context_handling_db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
# Or use individual settings:
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USERNAME=guest
# RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE_NAME=conversation_events_processing
RABBITMQ_EXCHANGE_NAME=conversation_exchange
RABBITMQ_ROUTING_KEY=conversation.end

# ============================================
# Application Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=30020
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# ============================================
# API Configuration
# ============================================
API_V1_PREFIX=/v1
PROJECT_NAME=Context Handling Service
PROJECT_VERSION=1.0.0
API_DESCRIPTION=Context Handling Service - Friendship Management Module

# ============================================
# Security Configuration
# ============================================
# ⚠️  CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Caching Configuration
# ============================================
CACHE_TTL=21600
CACHE_ENABLED=True

# ============================================
# Celery Configuration (Background Jobs)
# ============================================
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================
# LLM Analysis Configuration
# ============================================
# Enable LLM-based conversation analysis
LLM_ANALYSIS_ENABLED=False
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=openai/gpt-oss-20b

# ============================================
# Langfuse Configuration (Observability)
# ============================================
# Enable Langfuse for LLM call tracking and observability
LANGFUSE_ENABLED=False
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# Memory API Configuration (Mem0)
# ============================================
# Memory API URL for extracting memories from conversations
MEMORY_API_URL=http://103.253.20.30:6699
MEMORY_API_ENABLED=True







